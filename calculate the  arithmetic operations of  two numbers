#include<stdio.h>
#include<math.h>
#include<conio.h>
void main(){
clrscr();
int x,n,add,sub,mul,div,power;
printf("enter the value of x:");
scanf("%d",&x);
printf("enter the value of n:");
scanf("%d",&n);
add=x+n;
sub=x-n;
mul=x*n;
power=pow(x,n);
div=x%n;
printf("the addition of x & n is %d\n",add);
printf("the subraction of x & n is %d\n",sub);
printf("the multiplication of x & n is %d\n",mul);
printf("the division(quoient) of x & n is %d\n",div);
printf("x^n is %d\n",power);
getch();
}
