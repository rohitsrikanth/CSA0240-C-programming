#include<stdio.h>
#include<conio.h>
void  main(){
clrscr();
int i,n,arr[100],max=0,min=1000000;
printf("Enter no of elements:");
scanf("%d",&n);
printf("enter the elements:");
for(i=0;i<n;i++){
scanf("%d",&arr[i]);
}
for(i=0;i<n;i++){
if(arr[i]>max){
max=arr[i];
}
if(arr[i]<min){
min=arr[i];
}
}
printf("maximum of an array %d\n",max);
printf("minimum of an array %d",min);
getch();
}
